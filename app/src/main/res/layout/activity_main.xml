<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/back"
    tools:context="com.example.aliwo.arduinowifiwatering.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:id="@+id/chartLayout"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="80dp"
            >

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/moistchart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
            </com.github.mikephil.charting.charts.PieChart>

            <com.github.mikephil.charting.charts.PieChart
                android:layout_toRightOf="@+id/moistchart"
                android:id="@+id/temperatureChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
            </com.github.mikephil.charting.charts.PieChart>

        </LinearLayout>


    <Button
        android:text="Water"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:background="@drawable/main_button_shape"
        android:textStyle="bold"
        android:layout_below="@+id/chartLayout"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="LED"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flush_button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:background="@drawable/main_button_shape"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:id="@+id/LED_BUTTON" />


    <Button
        android:text="Flush"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/LED_BUTTON"
        android:layout_alignStart="@+id/LED_BUTTON"
        android:background="@drawable/main_button_shape"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:id="@+id/flush_button" />

    <Button
        android:text="SET UP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_button_shape"
        android:textStyle="bold"
        android:id="@+id/set_up_button"
        android:layout_below="@+id/LED_BUTTON"
        android:layout_alignLeft="@+id/LED_BUTTON"
        android:layout_alignStart="@+id/LED_BUTTON"
        android:textColor="#ffffff"
        />

    <!--<Button
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chartLayout"
        android:layout_centerHorizontal="true"
        android:background="@drawable/main_button_shape"
        android:id="@+id/dummy_button" />
    -->

    </RelativeLayout>


    <ListView android:layout_width="220dp"
        android:layout_height="match_parent"
        android:id="@+id/lv_activity_main_nav_list"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:background="@drawable/back"
        android:footerDividersEnabled="false" />

</android.support.v4.widget.DrawerLayout>
